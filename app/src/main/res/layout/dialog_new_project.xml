<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="wrap_content">

    <com.example.handasy.view.CustomTextView
        android:layout_width="match_parent"
        android:id="@+id/header"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="سيتم متابعتكم من خلال المهندس المختص"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/logo"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"/>

    <com.example.handasy.view.CustomTextView
        android:layout_width="match_parent"
        android:id="@+id/title"
        android:textSize="14sp"
        android:layout_below="@id/header"
        android:textColor="@color/darkYellow"
        android:layout_height="wrap_content"
        android:text="رئيس قسم الاستشارات"
        android:layout_margin="3dp"
        android:layout_toLeftOf="@id/logo"/>


    <com.example.handasy.view.CustomTextView
        android:layout_width="match_parent"
        android:id="@+id/name"
        android:textSize="14sp"
        android:layout_below="@id/title"
        android:textColor="@color/darkYellow"
        android:layout_height="wrap_content"
        android:text="رئيس قسم الاستشارات"
        android:layout_margin="3dp"
        android:layout_toLeftOf="@id/logo"/>

    <com.example.handasy.com.example.handasy.view.CustomButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:id="@+id/callButton"
        android:visibility="gone"
        android:layout_alignParentLeft="true"
        android:layout_margin="3dp"
        android:background="@drawable/button"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:text="اتصال"/>

    <com.example.handasy.view.CustomTextView
        android:layout_width="wrap_content"
        android:id="@+id/call"
        android:textSize="14sp"
        android:textColor="@color/darkYellow"
        android:layout_below="@id/name"
        android:layout_height="wrap_content"
        android:text="01222272346"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="right"
        android:drawableRight="@drawable/call_bitmap"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_alignEnd="@+id/name" />

    <com.example.handasy.view.CustomButton
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/buttonCall"
        android:text="اتصال"
        android:layout_toLeftOf="@id/call"
        android:layout_marginRight="5dp"

        android:layout_below="@id/name"
        android:textSize="@dimen/Small"
        android:textColor="@color/white"
        android:background="@drawable/button"/>

    <com.example.handasy.view.CustomButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/call"
        android:id="@+id/show"
        android:layout_marginTop="25dp"
        android:background="@color/darkYellow"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:text="عرض الطلب"/>
    
</RelativeLayout>
